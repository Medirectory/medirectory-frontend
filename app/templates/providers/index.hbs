<div class="banner"></div>

<section>
<div class="context">
  <div class="result-count">{{format-number model.meta.totalResults}} results</div>
  <div class="tools">
    {{#if controllers.index.basicSearch}}
      {{basic-search class='update-search' submit='submitUpdate' placeholder='Enter search here' query=query sideNav=true}}
    {{else}}
      {{advanced-search class='update-search' submit='submitUpdate' name=nameTemp location=locationTemp taxonomy=taxonomyTemp npi=npiTemp organization=orgTemp sideNav=true providerSearch=true}}
    {{/if}}
  </div>
  {{home-link}}
</div>

<div class="main">

  {{outlet}}

  {{#if model}}
  <table>
    <thead>
      <tr>
        <th class="npi-col">NPI</th>
        <th class="name-col">Name</th>
        <th class="location-col">Practice Location</th>
        <th class="specialties-col">Specialties</th>
      </tr>
    </thead>
    <tbody>
      {{#each model key="@index" as |provider|}}
        <tr>
          <td>{{#link-to 'providers/show' provider.id }}{{provider.id}}{{/link-to}}</td>
          <td><strong>{{#if provider.otherFullName}}{{provider.otherFullName}}{{else}}{{provider.fullName}}{{/if}}</strong></td>
          <td>{{provider.practiceLocationAddress.shortLocation}}</td>
          <td>
            {{#each provider.classificationSpecialties key="@index" as |classSpecialty|}}
              {{!-- Should figure out someway to assign the proper taxonomy definition (it is a good addition!) --}}
              <span class="taxonomy">{{classSpecialty}} <span class="tooltip">{{classSpecialty.definition}}</span></span>
            {{/each}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <div class="pagination">
    {{#if hasPrevious}}
      {{#link-to 'providers/index' (query-params offset=previousOffset)}} {{fa-icon 'angle-left' fixedWidth=True}} Previous{{/link-to}}
    {{/if}}

    {{#if hasNext}}
      {{#link-to 'providers/index' (query-params offset=nextOffset)}} Next {{fa-icon 'angle-right' fixedWidth=True}} {{/link-to}}
    {{/if}}

    {{#unless hasNext}}{{#unless hasPrevious}}All results shown.{{/unless}}{{/unless}}
  </div>

  {{else}}
    <div class="no-results">
      <h1>Medirectory did not find any results {{fa-icon 'frown-o' fixedWidth=True}}</h1>
      <h2>Try adjusting your search at left.</h2>
    </div>

  {{/if}}

</div>
</section>
